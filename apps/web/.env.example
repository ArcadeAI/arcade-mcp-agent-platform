# ============================================================================
# Open Agent Platform - Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values.
# DO NOT commit .env.local to version control!

# ----------------------------------------------------------------------------
# Base Configuration
# ----------------------------------------------------------------------------

# Base API URL for the application - MUST include /api suffix
NEXT_PUBLIC_BASE_API_URL=http://localhost:3000/api

# Application environment
NODE_ENV=development

# Demo app flag
NEXT_PUBLIC_DEMO_APP=false

# ----------------------------------------------------------------------------
# LangGraph Deployment Configuration
# ----------------------------------------------------------------------------

# JSON array of LangGraph deployments
# IMPORTANT: The "id" field must be the ASSISTANT ID from your LangGraph server
# When you run "langgraph dev", it creates a default assistant - use that ID
NEXT_PUBLIC_DEPLOYMENTS='[{"id":"<ASSISTANT_ID_FROM_LANGGRAPH>","deploymentUrl":"http://localhost:2024","isDefault":true,"defaultGraphId":"chat_agent","name":"Local Development"}]'

# Use LangSmith authentication for proxy mode
NEXT_PUBLIC_USE_LANGSMITH_AUTH=true

# LangSmith API Key - for server-side LangGraph authentication
LANGSMITH_API_KEY=lsv2_pt_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------------------------
# Arcade MCP Gateway Configuration
# ----------------------------------------------------------------------------

# Arcade MCP Gateway URL (full URL including /mcp/<slug>)
ARCADE_MCP_GATEWAY_URL=https://api.arcade.dev/mcp/<your-slug>

# Whether MCP requires authentication
NEXT_PUBLIC_MCP_AUTH_REQUIRED=true

# Arcade Project API Key (server-side only)
ARCADE_API_KEY=arc_proj_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Arcade User ID (your email)
ARCADE_USER_ID=your-email@example.com

# ----------------------------------------------------------------------------
# RAG Configuration (Currently Disabled)
# ----------------------------------------------------------------------------

